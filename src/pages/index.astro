---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
import AvailableForWork from "../components/available.astro";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center">
			<div class="absolute w-full h-dvh -z-10">
				<WarpBackground
					color1="#000000ff"
					color2="#ff00e1ff"
					color3="#6b14b8" 
					speed={0.1}
					swirl={0.1}
					swirlIterations={5}
					shapeScale={0.3}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<div>
					<H1 size="large"> Armin <br /> Garshasebi </H1>
				</div>

				<div>
					<AvailableForWork className="py-4" />
					<div class="mb-2 sm:mb-4 flex items-center justify-between">
						<div class="flex items-center gap-4">
							<Link href="https://de.linkedin.com/in/armingarshasebi" target="_blank">Guckst du hier</Link>
							<Link href="/projects" variant="secondary">Projects</Link>
						</div>

						<Navigation client:load>
							<Link href="/blog" variant="secondary">Lust</Link>
							<Link href="/about" variant="secondary">Auf</Link>
							<Link href="/contact" variant="secondary">Sparring?</Link>
						</Navigation>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>
